package Auto;
require 5.10.0;
use strict;
use warnings;
use POSIX;
use locale;
use Mouse;
use IO::Socket;
use FindBin qw($Bin);
our $Bin = $Bin;
unshift(@INC, "$Bin/../src");
require API::Std;
#require DB::Flatfile;
require Parser::Config;
require Parser::Lang;
#require Parser::IRC;
#require Sys;

use constant {
	NAME   => 'Auto IRC Bot',
	VER    => 3,
	SVER   => 0,
	REV    => 0,
	RSTAGE => 'd'
};

our $CONF = Parser::Config->new("auto.conf") or print "Failed to open configuration file.\n" and exit;
our %SETTINGS = $CONF->parse;

my @lclv = API::Std::conf_get("locale");
our $LOCALE = $lclv[0][0];
my @lang = split('_', $LOCALE);
Parser::Lang::parse($lang[0]) or print ".\n" and exit;
undef @lang;
undef @lclv;
