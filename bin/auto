package Auto;
require 5.10.0;
use strict;
use warnings;
use POSIX;
use locale;
use IO::Socket;
use Data::Dumper;
use FindBin qw($Bin);
our $Bin = $Bin;
unshift(@INC, "$Bin/../src");
require API::Std;
require DB::Flatfile;
require Parser::Config;
#require Parser::IRC;
#require IRC::Standard;
#require Sys::Full;

use constant {
	NAME   => 'Auto IRC Bot',
	VER    => 3,
	SVER   => 0,
	REV    => 0,
	RSTAGE => 'd'
};

our $CONF = Parser::Config->new("auto.conf") or print "Failed to open configuration file.\n" and exit;
our %SETTINGS = $CONF->parse;

setlocale(LC_CTYPE, API::Std::conf_get('locale'));
require API::Text;

DB::load() or exit;

my $k = DB::get("LOL") or print ".\n" and exit;
print Dumper($k);

print @{ $k }->[0]->[0]."\n";
